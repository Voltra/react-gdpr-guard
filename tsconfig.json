{
	"compilerOptions": {
		"outDir": "dist",
		"module": "esnext",
		"target": "ES5",
		"lib": [
			"dom",
			"esnext"
		],
		"moduleResolution": "node",
		"jsx": "react",
		"sourceMap": true,
		"declaration": true,
		"esModuleInterop": true,
		"strict": true,
		"suppressImplicitAnyIndexErrors": true,
		"allowSyntheticDefaultImports": true,
		"allowJs": false,
		"typeRoots": [
			"node_modules/@types"
		]
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"dist",
		"example",
		"**/*.test.ts"
	]
}
